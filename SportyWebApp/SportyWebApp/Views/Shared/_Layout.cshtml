<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/simpleSidebar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/shared.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <img src="~/Images/title.png" id="logoTitle" />
    <div><ul id="navUl"><li class="navLi"></li></ul></div>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <button id="menu-toggle">
                <img src="~/Images/hamburgerMenuIcon.png" id="menu-toggle-image" />
            </button>
            <ul class="sidebar-nav">
                <li>@Html.ActionLink("MOJI DOGAĐAJI", "MyEvents", "Events") </li>
                <li>@Html.ActionLink("TRAŽI DOGAĐAJE", "FindEvents", "Events")</li>
                <li>@Html.ActionLink("POSTAVKE PROFILA", "Index", "Profile")</li>
                <li>@Html.ActionLink("ODJAVA", "Index", "Login")</li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                        <hr />
                        <footer>
                            <p>&copy; @DateTime.Now.Year - Sporty development</p>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            console.log("bla");
            $("#menu-toggle").blur();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
