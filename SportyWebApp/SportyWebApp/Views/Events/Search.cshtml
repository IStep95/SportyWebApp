@{int sportId = 1; }
<div id="findEventsMainDiv">
    <h3 id="findEventTitle">Pretraga događaja:</h3>
    <div class="findDiv">
        <form method="get" action="@Url.Action("Search", "Events")">
            <div class="one">
                <label class="labels">Sport:</label>
                <select id="sportSelect" name="sportId">
                    @foreach(var sport in ViewBag.AllSports)
                    {
                        <option value="@sportId">@sport.Name</option>
                        sportId = sportId + 1;
                    }
                </select>
                <br />
                <label class="labels">Datum:</label>
                <input type="date" id="datePicker" name="date" />
            </div>
            <div class="two">
                <label class="labels">Grad:</label>
                <input type="text" id="cityInput" name="cityName" />
                <br />
                <label class="labels" id="freePlayersLabel">Broj slobodnih mjesta:</label>
                <select id="freePlayers" name="freePlayers">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value=">5">5 i više</option>
                </select>
                <button class="buttons" id="searchButton" type="submit">TRAŽI</button>
            </div>
        </form>
    </div>
    <hr class="horizontalLine"/>
    <div class="resultsDiv">
        @foreach (var entry in @ViewBag.SearchEvents)
        {
            var filledSeats = entry.MaxPlayers - entry.FreePlayers;
            <section class="sportCard">
                <div class="iconDiv">
                    @if (entry.SportName == "Mali nogomet")
                    {
                        <img src="~/Images/footballBall.png" class="sportBallIcon" />
                    }
                    else if (entry.SportName == "Nogomet")
                    {
                        <img src="~/Images/footballBall.png" class="sportBallIcon" />
                    }
                    else if (entry.SportName == "Rukomet")
                    {
                        <img src="~/Images/handballBall.png" class="sportBallIcon" />
                    }
                    else if (entry.SportName == "Košarka")
                    {
                        <img src="~/Images/basketballBall.png" class="sportBallIcon" />
                    }
                    else if (entry.SportName == "Badminton")
                    {
                        <img src="~/Images/badmintonBall.png" class="sportBallIcon" />
                    }
                    else if (entry.SportName == "Tenis")
                    {
                        <img src="~/Images/tennisRacket.png" class="sportBallIcon" />
                    }
                </div>
                <div class="descriptionDiv">
                    <label id="descriptionText">
                        @entry.SportName
                        @entry.Location, @ViewBag.CityName
                        Broj prijavljenih igrača: @filledSeats / @entry.MaxPlayers
                        @entry.StartTime
                    </label>
                </div>
            </section>
        }
    </div>
</div>


